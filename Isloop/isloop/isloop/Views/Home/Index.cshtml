@{
    ViewData["Title"] = "Home Page";
}

<div class=ctrl>
    <h2 class="res" id="res">Verifique loop!</h2>
    <input id="only-text" type="text" value="a:ab-b,ac-c,ad-d&b:bc-c&c:ca-a,cd-d&d:db-b,df-f&e&f" />
    <input class="cursor-pointer" id="only-button" type="button" value="go" onclick="onlyButton_OnClick()" />
</div>

<script>

    function onlyButton_OnClick() {

        $.ajax({
            data: {txt:$('#only-text').val()},
            url: 'Home/VerifyLoop',
            method: 'POST',
            success: function (res) {
                $('#res').html(res.txt);
            }
        });

    };

</script>